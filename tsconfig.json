{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/context/AuthContext.js",
    "app/firebase.js",
    "app/(tabs)/DashboardPage.jsx",
    "app/(tabs)/DashboardPage.jsx",
    "app/_layout.tsx",
    "app/(tabs)/_layout.jsx",
    "components/BirdAnimation.js",
    "app/index.tsx"
  ]
}
